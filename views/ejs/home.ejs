            <ul class = "taskslist">
                <% var today = new Date(); %>
                <% var dd = today.getDate(); %>
                <% var mm = today.getMonth()+1; %>
                <% var yyyy = today.getFullYear(); %>
                <% if(dd < 10){ %>
                    <% dd = '0'+dd %>
                <% } %> 
                <% if(mm<10){ %>
                    <% mm = '0'+mm %>
                <% } %>
                <% today = dd + '-' + mm + '-' + yyyy %>
                <%function reformatDate(dateStr){ %>
                  <% dArr = dateStr.split("-") %>
                  <% return dArr[2]+ "-" +dArr[1]+ "-" +dArr[0] %>
                <% } %>
                <% for(let i = 0 ; i < task.length ; i++){ %>
                    <% if(task[i].date == today){ %>
                        <li class = "task color-red">
                            <i class="far fa-square"></i>
                            <span><%= task[i].description %></span>
                            <span class = "date biggerfontsize">TODAY</span>
                        </li>
                    <% }else if(new Date(reformatDate(task[i].date)) < new Date()){ %>
                        <li class = "task">
                            <i class="far fa-square"></i>
                            <span><%= task[i].description %></span>
                            <span style = "font-family: sans-serif; color:red">DUE DATE PASSED</span>
                            <span class = "date"><%= task[i].date %></span>
                        </li>
                    <% }else{ %>
                        <li class = "task">
                            <i class="far fa-square"></i>
                            <span><%= task[i].description %></span>
                            <span class = "date"><%= task[i].date %></span>
                        </li>
                    <% } %>
                <% } %>
            </ul>
